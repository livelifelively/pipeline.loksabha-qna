{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TypeScript: Attach to Worker",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/workflows/ts/**/*.js"]
    },
    {
      "name": "TypeScript: Attach to Workflow Executor",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/workflows/ts/**/*.js"]
    },
    {
      "name": "Python: Attach to Worker",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": false,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/py-wa",
          "remoteRoot": "${workspaceFolder}/py-wa"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug All Workers",
      "configurations": [
        "TypeScript: Attach to Worker",
        "TypeScript: Attach to Workflow Executor",
        "Python: Attach to Worker"
      ]
    }
  ]
}
